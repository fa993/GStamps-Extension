{
  "name": "StampIt",
  "description": "Stickers for Google Meet Chat",
  "version": "0.3",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "action" : {
    "default_popup" : "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "exclude_matches": ["https://meet.google.com/"],
      "css": ["my-styles.css"],
      "js": ["twemoji.min.js", "lru.js", "replacer.js"]
    }
  ],
  "icons" : {
    "128" : "logo.png"
  }
}
